<h2>User info</h2>
<% if @user.errors.any? %>
    <div class="error_explanation">
        <h3 class><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_for(@user) do |f| %>
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true %>
    
    <br><label for="user_profile_image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    
    <br><label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true %>

    <br><%= f.submit "Update User" %>
<% end %>